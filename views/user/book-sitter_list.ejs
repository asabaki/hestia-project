<section class="request-sitter">
    <h1 class="heading-of-page">Request a Sitter</h1>
    <div class="row">
        <div class="col-1-of-2">
                <p>Please note there is a 2 hour minimum for all babysitting jobs.</p>
                <p>Cancellations: Minimum of 24 hours notice of cancellation required.</p>
        </div>
        <div class="col-1-of-2">
        <div class="request-sitter_box">
        <form action="/user/book" method="POST" request-sitter_content request-sitter_content-1 >
            <table rules="none" class="request-sitter_sitterList" >
                            <tr>
                                <th></th>
                                <th>Name</th>
                                <th>Service</th>
                                <th>License</th>
                                <th>Language</th>
                                <th>Rate</th>
                                <th>Price/hour</th>
                                <th></th>
                            </tr>
                            <% sitters.forEach((sitter) => { %>
                            <tr class="paymentMethod_selectedCard ">
                                <td><input type="radio" name="sitter" value="<%=sitter._id%>" ></td>
                                <td><%=sitter.firstname+" "+sitter.lastname%></td>
                                <% if(sitter.servicesOffered.houses) { %>
                                    <td>House</td>
                                <% } else if(sitter.servicesOffered.kids) {%>
                                <td>Child</td>
                                <% } else if(sitter.servicesOffered.pets) {%>
                                    <td>Pet</td>
                                <% } else if(sitter.servicesOffered.aged) {%>
                                    <td>Elder</td>
                                <% } else if(sitter.servicesOffered.challenged) {%>
                                    <td>Challenged</td>
                                <% } else {%>
                                    <td>Not Set</td>
                                <% } %>

                                <td>Licensed</td>   
                                <td>English</td> 
                                <td>
                                    <div class="starr starr-dashboard request-sitter_star">
                                        <p>3</p>
                                    </div>
                                </td> 
                                <td>200</td>  
                                <td><img src="<%=sitter.avatar%>" alt="" class="paymentMethod_selectedCard-img request-sitter_img"></td>
                            </tr>
                            <% }) %>
                        </table>
                    </tbody>
                </table>
        
                <div class="request-sitter_btn">
                    <input type="checkbox" name="term">&nbsp; I have read and agree with the terms and conditions</input><br>
                    <input type="submit" name="save" class="account-setting-btn account-setting-btn-save" value="Submit">
                </div>
            </form>
        </div>
        </div>
    </div>
    <script>
    $('span.fa.fa-star').remove();
$('span.fa.fa-star').empty();
var newSpan='<span class="fa fa-star"></span>' + 
            '<span class="fa fa-star"></span>'+ 
            '<span class="fa fa-star"></span>'+ 
            '<span class="fa fa-star"></span>'+ 
            '<span class="fa fa-star"></span>';

$(".starr").append(newSpan);
var nRate=$(".starr p").size();
for(let j=0;j<nRate;j++)
{
    var rate=$(".starr p:eq("+j+")").text();
    for(let i=0;i<rate;i++)
    {
        $( ".starr:eq("+j+") span.fa.fa-star:eq("+i+")" ).addClass("checked")
    }
}
$('.request-sitter_star p').empty();
    </script>
                    
    

