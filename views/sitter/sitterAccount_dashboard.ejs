            </section>
            <script>
                var newSpan = '<span class="fa fa-star"></span>' +
                    '<span class="fa fa-star"></span>' +
                    '<span class="fa fa-star"></span>' +
                    '<span class="fa fa-star"></span>' +
                    '<span class="fa fa-star"></span>';

                $(".starr").append(newSpan);

                var n = $(".starr p").size();



                for (let j = 0; j < n; j++) {
                    var rate = $(".starr p:eq(" + j + ")").text();
                    for (let i = 0; i < rate; i++) {
                        $(".starr:eq(" + j + ") span.fa.fa-star:eq(" + i + ")").addClass("checked")
                    }
                }
            </script>
