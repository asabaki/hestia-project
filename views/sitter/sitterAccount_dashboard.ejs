                                    <li>
                                        <i class="far fa-calendar-alt"></i>
                                        <a href="/sitter/availability" class="account__details-link">availability</a>
                                    </li>
                                    <li>
                                        <i class="fas fa-book"></i>
                                        <a href="/sitter/tasks" class="account__details-link">Total Tasks</a>
